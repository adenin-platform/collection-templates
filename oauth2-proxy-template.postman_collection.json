{
	"info": {
		"_postman_id": "{{postmanId}}",
		"name": "{{name}}",
		"description": "# {{title}}\r\n\r\n![logo]({{logoUrl}})",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "proxy",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "{{requestId}}",
						"exec": [
							"\r",
							"// activity provides the execution context for the connector service\r",
							"// should be adjusted for testing with PostMan, but is immutable when executed by app.adenin.com\r",
							"pm.environment.set(\"activity\", \r",
							"{\r",
							"  \"Context\": {\r",
							"    \"UserId\": 815,\r",
							"    \"UserName\": \"support@adenin.com\",\r",
							"    \"UserLocale\": \"en-US\",\r",
							"    \"UserTimezone\": \"America/Los_Angeles\",\r",
							"  },\r",
							"  \"Request\": {\r",
							"    \"Path\": \"\",\r",
							"    \"Handler\": null,\r",
							"    \"Method\": \"POST\",\r",
							"    \"Action\": null,\r",
							"    \"Query\": {},\r",
							"    \"Data\": null  // incoming request data\r",
							"  },\r",
							"  \"Response\": {\r",
							"    \"ErrorCode\": 0,\r",
							"    \"Data\": {}\r",
							"  }\r",
							"});\r",
							"\r",
							"\r",
							"var activity = pm.environment.get(\"activity\");\r",
							"pm.environment.set(\"METHOD\", activity.Request.Method || \"GET\"); \r",
							"pm.environment.set(\"path\", activity.Request.Path);\r",
							"\r",
							"var query = activity.Request.Query ? Object.keys(activity.Request.Query).map(key => `${key}=${activity.Request.Query[key]}`).join('&') : '';\r",
							"pm.environment.set(\"query\", query ? \"?\" + query : \"\");\r",
							"\r",
							"pm.environment.set(\"request\", activity.Request.Data != null ? JSON.stringify(activity.Request.Data): \"\");\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "{{scriptId}}",
						"exec": [
							"var template = `<script id=\"loader\" src=\"https://components.adenin.com/components/at-card-preview/loader.js\"></script>`;\r",
							"var model = pm.response.json();\r",
							"\r",
							"model._card = {\r",
							"    type: 'status'\r",
							"};\r",
							"\r",
							"pm.visualizer.set(template, model);\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
                "auth": {
                    "oauth2": [
                        {
                            "key": "useBrowser",
                            "value": false,
                            "type": "boolean"
                        },
                        {
                            "key": "challengeAlgorithm",
                            "value": "S256",
                            "type": "string"
                        },
                        {
                            "key": "state",
                            "value": "dev",
                            "type": "string"
                        },
                        {
                            "key": "scope",
                            "value": "{{_Scopes}}",
                            "type": "string"
                        },
                        {
                            "key": "redirect_uri",
                            "value": "https://app.adenin.com/oauth2connector/returnUrl",
                            "type": "string"
                        },
                        {
                            "key": "grant_type",
                            "value": "authorization_code",
                            "type": "string"
                        },
                        {
                            "key": "clientSecret",
                            "value": "{{_ClientSecret}}",
                            "type": "string"
                        },
                        {
                            "key": "clientId",
                            "value": "{{_ClientId}}",
                            "type": "string"
                        },
                        {
                            "key": "authUrl",
                            "value": "{{_AccessCodeServiceEndpoint}}",
                            "type": "string"
                        },
                        {
                            "key": "addTokenTo",
                            "value": "header",
                            "type": "string"
                        },
                        {
                            "key": "client_authentication",
                            "value": "header",
                            "type": "string"
                        },
                        {
                            "key": "accessTokenUrl",
                            "value": "{{_AccessTokenServiceEndpoint}}",
                            "type": "string"
                        },
                        {
                            "key": "tokenType",
                            "type": "any"
                        }
                    ]
                },
				"method": "{{METHOD}}",
				"header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{{request}}",
                    "options": {
                        "raw": {
                        "language": "json"
                        }
                    }
                },
				"url": {
					"raw": "{{url.raw}}{{path}}{{query}}",
					"protocol": "{{url.protocol}}",
					"host": [
						""
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "oauth2",
		"oauth2": [
			{
                "key": "accessToken",
                "value": "",
                "type": "string"
            },
            {
                "key": "tokenType",
                "value": "Bearer",
                "type": "string"
            },
            {
                "key": "addTokenTo",
                "value": "header",
                "type": "string"
            }
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"id": "{{requestId}}",
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"id": "{{scriptId}}",
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "_AccessCodeServiceEndpoint",
			"value": "{{AccessCodeServiceEndpoint}}"
		},
		{
			"key": "_AccessTokenServiceEndpoint",
			"value": "{{AccessTokenServiceEndpoint}}"
		},
		{
			"key": "_ClientId",
			"value": "{{ClientId}}"
		},
		{
			"key": "_ClientSecret",
			"value": "{{ClientSecret}}"
		},
		{
			"key": "_Scopes",
			"value": "{{Scopes}}"
		}
	],
	"protocolProfileBehavior": {}
}
